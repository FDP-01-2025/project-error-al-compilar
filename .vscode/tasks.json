{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compilar-proyecto",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++11",
        "-g",
        "main.cpp",
        "src/menu.cpp",
        "src/character.cpp",
        "src/battle.cpp",
        "src/player_selection.cpp", 
        "src/logger.cpp", 
        "-o",
        "outDebug.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}